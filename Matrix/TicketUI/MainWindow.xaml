<Window x:Class="TicketUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketUI"
        xmlns:vm="clr-namespace:TicketUI.ViewModel"
        mc:Ignorable="d"
        Title="Генератор экзаменационных билетов" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>

        <vm:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <vm:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Стили для улучшенного внешнего вида -->
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FF78909C"/>
            <Setter Property="Foreground" Value="#FF37474F"/>
        </Style>
        

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#FF2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFB0BEC5"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFB0BEC5"/>
        </Style>

        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TicketItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Генератор экзаменационных билетов" 
                   FontSize="20" FontWeight="Bold" Foreground="#FF37474F"
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Панель настроек -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Основные настройки -->
                    <GroupBox Header="Основные настройки" Style="{StaticResource GroupBoxStyle}">
                        <StackPanel>
                            <TextBlock Text="Количество билетов:" FontWeight="SemiBold" Margin="0,0,0,2"/>
                            <TextBox Text="{Binding Settings.TicketsCount, UpdateSourceTrigger=PropertyChanged}" 
                                   Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Заданий в билете:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                            <TextBox Text="{Binding Settings.TasksPerTicket, UpdateSourceTrigger=PropertyChanged}" 
                                   Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Целевая сложность:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                            <TextBox Text="{Binding Settings.TargetComplexity, UpdateSourceTrigger=PropertyChanged}" 
                                   Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Допуск сложности:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                            <TextBox Text="{Binding Settings.ComplexityTolerance, UpdateSourceTrigger=PropertyChanged}" 
                                   Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Настройки распределения типов -->
                    <GroupBox Header="Распределение типов заданий" Style="{StaticResource GroupBoxStyle}" Margin="0,10,0,0">
                        <StackPanel>
                            <CheckBox Content="Балансировать типы заданий" 
                                    IsChecked="{Binding Settings.BalanceTaskTypes}"
                                    Style="{StaticResource CheckBoxStyle}"/>

                            <Grid Margin="0,10,0,0" IsEnabled="{Binding Settings.BalanceTaskTypes}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Практика (%):" 
                                         VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Settings.PracticePercentage, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource TextBoxStyle}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Лекции (%):" 
                                         VerticalAlignment="Center" Margin="0,5,5,0"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding Settings.LecturePercentage, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource TextBoxStyle}" Margin="0,5,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Блиц (%):" 
                                         VerticalAlignment="Center" Margin="0,5,5,0"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding Settings.BlitzPercentage, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource TextBoxStyle}" Margin="0,5,0,0"/>
                            </Grid>
                        </StackPanel>
                    </GroupBox>

                    <!-- Дополнительные настройки -->
                    <GroupBox Header="Дополнительные настройки" Style="{StaticResource GroupBoxStyle}" Margin="0,10,0,0">
                        <StackPanel>
                            <CheckBox Content="Предпочтительно разнообразие тем" 
                                    IsChecked="{Binding Settings.PreferDiverseTopics}"
                                    Style="{StaticResource CheckBoxStyle}"/>

                            <TextBlock Text="Доступно заданий:" FontWeight="SemiBold" Margin="0,10,0,2"/>
                            <TextBlock Text="{Binding AvailableTasks.Count}" FontSize="14" Foreground="#FF2196F3"
                                     FontWeight="Bold" Margin="0,0,0,10"/>

                            <Button Content="Обновить список заданий" 
                                    Style="{StaticResource ButtonStyle}"
                                    Click="RefreshTasks_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Кнопка генерации -->
                    <Button Grid.Row="2" Content="Сгенерировать билеты" 
                            Command="{Binding GenerateCommand}"
                            Style="{StaticResource ButtonStyle}"
                            FontWeight="Bold" FontSize="14"
                            Margin="0,20,0,0" Height="40"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="3" 
                         Background="Transparent" ShowsPreview="True"/>

            <!-- Панель результатов -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Статус -->
                <Border Grid.Row="0" Background="#E3F2FD" BorderBrush="#BBDEFB" BorderThickness="1" 
                       Padding="10,5" Margin="0,0,0,10">
                    <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold" 
                              Foreground="#0D47A1" TextWrapping="Wrap"/>
                </Border>

                <!-- Список билетов -->
                <GroupBox Grid.Row="1" Header="Сгенерированные билеты" Style="{StaticResource GroupBoxStyle}">
                    <Grid>
                        <ListBox ItemsSource="{Binding Tickets}" 
                               ItemContainerStyle="{StaticResource TicketItemStyle}"
                               ScrollViewer.VerticalScrollBarVisibility="Auto"
                               BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding}" 
                                                     FontWeight="Bold" FontSize="12"
                                                     Foreground="#FF37474F"/>

                                            <ItemsControl Grid.Row="1" ItemsSource="{Binding Tasks}" 
                                                        Margin="10,5,0,0">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Margin="0,2" Padding="5,2" 
                                                               Background="#F5F5F5" CornerRadius="3">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="60"/>
                                                                    <ColumnDefinition Width="80"/>
                                                                    <ColumnDefinition Width="60"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0" Text="{Binding Title}" 
                                                                          VerticalAlignment="Center"/>
                                                                <TextBlock Grid.Column="1" Text="{Binding Topic}" 
                                                                          VerticalAlignment="Center" 
                                                                          Foreground="#757575"/>
                                                                <TextBlock Grid.Column="2" Text="{Binding Type}" 
                                                                          VerticalAlignment="Center" 
                                                                          Foreground="#757575"/>
                                                                <TextBlock Grid.Column="3" Text="{Binding Complexity}" 
                                                                          VerticalAlignment="Center" 
                                                                          Foreground="#F44336" 
                                                                          FontWeight="Bold"
                                                                          HorizontalAlignment="Right"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Сообщение при отсутствии билетов -->
                        <TextBlock Text="Билеты не сгенерированы. Нажмите кнопку 'Сгенерировать билеты'."
                                  VerticalAlignment="Center" HorizontalAlignment="Center"
                                  Foreground="#9E9E9E" FontStyle="Italic"
                                  Visibility="{Binding Tickets.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                    </Grid>
                </GroupBox>

                <!-- Статистика -->
                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#E8F5E8" BorderBrush="#C8E6C9" 
                           BorderThickness="1" Padding="10" CornerRadius="3">
                        <TextBlock Text="{Binding Tickets.Count, StringFormat='Всего билетов: {0}'}" 
                                  FontWeight="SemiBold" Foreground="#2E7D32" 
                                  HorizontalAlignment="Center"/>
                    </Border>

                    <Border Grid.Column="1" Background="#E3F2FD" BorderBrush="#BBDEFB" 
                           BorderThickness="1" Padding="10" CornerRadius="3" Margin="5,0">
                        <TextBlock Text="{Binding AverageComplexity, StringFormat='Средняя сложность: {0:F1}'}" 
                                  FontWeight="SemiBold" Foreground="#1565C0" 
                                  HorizontalAlignment="Center"/>
                    </Border>

                    <Border Grid.Column="2" Background="#FFF3E0" BorderBrush="#FFCCBC" 
                           BorderThickness="1" Padding="10" CornerRadius="3">
                        <TextBlock Text="{Binding TotalTasks, StringFormat='Всего заданий: {0}'}" 
                                  FontWeight="SemiBold" Foreground="#E65100" 
                                  HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- Индикатор загрузки -->
        <Border Grid.Row="2" Background="#80000000" 
               Visibility="{Binding IsGenerating, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-16.706"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <Border Background="White" Padding="20" CornerRadius="5" 
                       HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <ProgressBar IsIndeterminate="True" Width="50" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Генерация билетов..." VerticalAlignment="Center" 
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>